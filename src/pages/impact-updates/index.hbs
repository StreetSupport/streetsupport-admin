---
title: Impact Updates - Street Support
description: Street support makes it easier to help homeless people. Here is more information about how it works.
layout: default.hbs
permalink: false
jsBundle: impactupdates
page: impactupdates
nosubnav: true
---

<div class="block block--highlight admin-header">
  <div class="container block__inner">
    <header>
    <h1>Impact Updates</h1>
    </header>
  </div>
</div>
<div class="block block--main-body">
  <div class="container block__inner">
    <div class="block__content form">
      <h2>Add New Update</h2>
      {{> form-feedback}}
      <article data-bind="with: newUpdate">
        <dl class="key-value-pair">
          <dt class="key-value-pair__key">Content</dt>
          <dd class="key-value-pair__value">
            <textarea data-bind="textInput: updateContent" class="form__input form__input--textarea"></textarea>
          </dd>
          <dt class="key-value-pair__key">Display Date (optional)</dt>
          <dd class="key-value-pair__value">
            <input type="number" min="1" max="31" data-bind="textInput: displayDateDay" class="form__input form__input--short" placeholder="dd" />
            <input type="number" min="1" max="12" data-bind="textInput: displayDateMonth" class="form__input form__input--short" placeholder="mm" />
            <input type="number" min="2016" max="2018" data-bind="textInput: displayDateYear" class="form__input form__input--short" placeholder="yyyy" />
          </dd>
          <!-- ko if: $parent.showCityDropDown() -->
          <dt class="key-value-pair__key">Associated City (optional)</dt>
          <dd class="key-value-pair__value">
            <select data-bind="options: $parent.cities,
              optionsValue: 'id',
              optionsText: function (city) {
                return city.name
              },
              value: cityId,
              optionsCaption: '-- please select --'" class="form__input"></select>
          </dd>
          <!-- /ko -->
        </dl>
        <button data-bind="click: save" class="btn btn--primary"><span class="btn__text">save</span></button>
      </article>
    </div>
    <div class="block__content">
      <h2>Previous Updates</h2>
      <div data-bind="foreach: impactUpdates">
        <article>
          <!-- ko if: isEditing() -->
          <dl class="key-value-pair">
            <dt class="key-value-pair__key">Content</dt>
            <dd class="key-value-pair__value">
              <textarea data-bind="textInput: updateContent" class="form__input form__input--textarea"></textarea>
            </dd>
            <dt class="key-value-pair__key">Display Date (optional)</dt>
            <dd class="key-value-pair__value">
              <input type="number" min="1" max="31" data-bind="textInput: displayDateDay" class="form__input form__input--short" placeholder="dd" />
              <input type="number" min="1" max="12" data-bind="textInput: displayDateMonth" class="form__input form__input--short" placeholder="mm" />
              <input type="number" min="2016" max="2018" data-bind="textInput: displayDateYear" class="form__input form__input--short" placeholder="yyyy" />
            </dd>
          <!-- ko if: $parent.showCityDropDown() -->
            <dt class="key-value-pair__key">Associated City (optional)</dt>
            <dd class="key-value-pair__value">
              <select data-bind="options: $parent.cities,
                optionsValue: 'id',
                optionsText: function (city) {
                  return city.name
                },
                value: cityId,
                optionsCaption: '-- please select --'" class="form__input"></select>
            </dd>
            <!-- /ko -->
          </dl>
          <button data-bind="click: update" class="btn btn--primary"><span class="btn__text">update</span></button>
          <button data-bind="click: cancelEditing" class="btn btn--indifferent"><span class="btn__text">cancel</span></button>
          <!-- /ko -->
          <!-- ko ifnot: isEditing() -->
          <div data-bind="html: updateContentForDisplay"></div>
          <p data-bind="text: displayDate"></p>
          <p data-bind="text: cityId"></p>
          <button data-bind="click: enableEditing" class="btn btn--primary"><span class="btn__text">edit</span></button>
          <button data-bind="click: deleteUpdate" class="btn btn--warning"><span class="btn__text">delete</span></button>
          <!-- /ko -->
        </article>
      </div>
    </div>
  </div>
</div>
{{> loading-spinner}}
