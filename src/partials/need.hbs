<h3>Need</h3>
<dl class="key-value-pair">
  <dt class="key-value-pair__key">Type</dt>
  <dd class="key-value-pair__value">
    <select data-bind="options: availableTypes,
    optionsText: function (item) {
      return item
    },
    value: type,
    optionsCaption: '-- please select --'" class="form__input"></select>
  </dd>
  
  <dt class="key-value-pair__key">Client Groups</dt>
  <dd class="key-value-pair__value">
    <span data-bind="html: сlientGroupKeys"></span>
    <select size="5" multiple="true" data-bind="options: availableClientGroups,
        optionsValue: function (item) { return item.key },
        optionsText:  function (item) { return item.name },
        selectedOptions: сlientGroupKeys,
        optionsCaption: '-- please select --'" class="form__input client-group-select"></select>
  </dd>

  <dt class="key-value-pair__key">Description</dt>
  <dd class="key-value-pair__value">
    <input type="text" data-bind="textInput: description" class="form__input form__input--full-width" maxlength="50" />
  </dd>
  <dt class="key-value-pair__key">Keywords (Help people find your need based on some comma-separated keywords e.g. 'Trousers, Socks' or 'Electrician')</dt>
  <dd class="key-value-pair__value">
    <input type="text" data-bind="textInput: keywords" class="form__input form__input--full-width" maxlength="100" />
  </dd>
  <dt class="key-value-pair__key">Reason for Need</dt>
  <dd class="key-value-pair__value">
    <textarea data-bind="textInput: reason" class="form__input form__input--textarea"></textarea>
  </dd>
  <dt class="key-value-pair__key">Link for more information</dt>
  <dd class="key-value-pair__value">
    <input type="text" data-bind="textInput: moreInfoUrl" class="form__input" />
  </dd>

  <dt class="key-value-pair__key">Start advertising date</dt>
  <dd class="key-value-pair__value">
    <input data-bind="value: startDate, attr: { min: $parent.moment().format($parent.dateFormat) }" type="date" class="form__input"/>
  </dd>

  <dt class="key-value-pair__key">End advertising date</dt>
  <dd class="key-value-pair__value">
    <input data-bind="value: endDate, attr: { min: $parent.moment(startDate()).add(1, 'days').format($parent.dateFormat), max: $parent.moment(startDate()).add(6, 'months').format($parent.dateFormat) }" type="date" class="form__input"/>
  </dd>

  <!-- ko if: isPeopleOrThings -->
  <dt class="key-value-pair__key">Additional Instructions</dt>
  <dd class="key-value-pair__value">
    <textarea data-bind="textInput: instructions" class="form__input form__input--textarea"></textarea>
  </dd>
  <dt class="key-value-pair__key">Postcode</dt>
  <dd class="key-value-pair__value">
    <input type="text" data-bind="textInput: postcode" class="form__input" />
  </dd>
  <dt class="key-value-pair__key">Email</dt>
  <dd class="key-value-pair__value">
    <input type="email" data-bind="textInput: email" class="form__input" />
  </dd>
  <!-- /ko -->
  <!-- ko if: isMoney -->
  <dt class="key-value-pair__key">Donation Amount (£)</dt>
  <dd class="key-value-pair__value">
    <input type="text" data-bind="textInput: donationAmountInPounds" class="form__input" />
  </dd>
  <dt class="key-value-pair__key">Donation Url</dt>
  <dd class="key-value-pair__value">
    <input type="text" data-bind="textInput: donationUrl" class="form__input" />
  </dd>
  <!-- /ko -->
</dl>
