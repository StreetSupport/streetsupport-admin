<h2>Needs</h2>
<a data-bind="attr: { 'href': addNeedUrl }" title="add need" class="btn btn--primary">
  <span class="btn__text">Add Need</span>
</a>
<div data-bind="foreach: needs">
  <article class="service-provider__item">
    <div class="service-provider__item-title">
      <h3>
        <a data-bind="attr: { href: viewOffersUrl }, html: description"></a>
      </h3>
    </div>
    <div class="service-provider__item-info">
      <!-- ko if: totalResponses -->
      <a data-bind="attr: { 'href': viewOffersUrl }" title="view responses" class="btn btn--primary">
        <span class="btn__text">View Responses (<span data-bind="text: totalResponses"></span>)</span>
      </a>
      <!-- /ko -->
      <a data-bind="attr: { 'href': editNeedUrl }" title="edit need" class="btn btn--info">
        <span class="btn__text">Edit</span>
      </a>
      <!-- ko if: canRepost -->
      <a data-bind="click: repostNeed" title="repost need" class="btn btn--indifferent">
        <span class="btn__text">Re-post</span>
      </a>
      <!-- /ko -->
      <a data-bind="click: resolveNeed" title="mark need as resolved" class="btn btn--warning">
        <span class="btn__text">Mark as Resolved</span>
      </a>
      <!-- ko if: isPriority -->
      <a data-bind="click: markAsPriority" data-claims="superadmin,cityadmin" title="unmark as a priority" class="btn btn--indifferent">
        <span class="btn__text">Unset Priority Need</span>
      </a>
      <!-- /ko -->
      <!-- ko ifnot: isPriority -->
      <a data-bind="click: markAsPriority" data-claims="superadmin,cityadmin" title="mark need as a priority" class="btn btn--primary">
        <span class="btn__text">Mark as Priority Need</span>
      </a>
      <!-- /ko -->
      <p class="service-provider__item-note"><span data-bind="text: neededDate"></span></p>
    </div>
  </article>
</div>
